
<b>Name: </b><%= @product.name %></br>
<% @product.images.each do |image| %>
   <img src= "<%= image.url%>">
<% end %><br>

<b>Genre: </b><%= @product.show_genre %><br>
<b>Production Year:</b><%= @product.production_year %><br>
<b>Producing Company:</b><%= @product.production_film_company %><br>
<b>TV Show Description:</b><%= @product.description %><br>
<b>Price: $ </b><%= @product.price %><br>
<b>Supplier: </b><%= @product.supplier.name %><br>
<%= button_to "Edit", "/products/#{@product.id}/edit", method: :get %>
<%= button_to "Delete", "/products/#{@product.id}", method: :delete %>


<%= form_tag"/carted_products", method: :post do %>
<b>QTY: </b><%= text_field_tag "quantity" %> 
<input type="text" value = "<%= @product.id %>" name = "product_id">
<input type = "submit" value = "Add to Cart">
<% end %>



